@using API.Models;
@model List<ArticuloComprado>
@{
    ViewData["Title"] = "Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
<div class="card-header">
<h3>COMPRA</h3>
    </div>
<div class="card-body">
<div class="card">
<table>
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Costo</th>
            <th>Cantidad</th>
            <th>SubTotal</th>
            <th>Fecha Compra</th>
        </tr>
    </thead>
    <tbody>
        @{var total = Model.Sum(item => item.Subtotal);}

        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Idproductos</td>
                <td>@Model[i].Titulo</td>
                <td>@Model[i].Descripcion</td>
                <td>@Model[i].PrecioUnitario</td>
                <td>@Model[i].CantidadVendida</td>
                <td>@Model[i].Subtotal</td>
                <td>@Model[i].Fecha</td>              
            </tr>
        }
    </tbody>
</table>
        </div></br>
    <a asp-action="RegresaIndexReset" asp-controller="Home" class="btn btn-primary btn-sm">Volver a Comprar</a>
        <a>TOTAL: @total </a>
    </div>
</div>